.list_wrap {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #d2d2d2;
}
.list_wrap .left_img {
  flex: 1;
  padding-left: 20rpx;
  width: 100vw;
}
.list_wrap .right_conent {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.list_wrap .right_conent .title {
  font-size: 24rpx;
}
.list_wrap .right_conent .goods_price {
  font-size: 30rpx;
  color: #eb4450;
}
